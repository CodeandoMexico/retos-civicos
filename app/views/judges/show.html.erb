<% if @evaluations.any? %>
  <table id="judges" class="table table-striped table-vertically-centered">
    <thead>
      <tr>
        <th><%= t('.name') %></th>
        <th><%= t('.email') %></th>
        <th><%= t('.company_name') %></th>
      </tr>
    </thead>
    <tbody>
      <%= content_tag_for :tr, @judges do |judge| %>
        <td><%= judge.name %></td>
        <td><%= judge.email %></td>
        <td><%= judge.company_name %></td>
      <% end %>
    </tbody>
  </table>
<% else %>
  <div class="alert alert-info">
    <%= t('.no_judges') %>
  </div>
<% end %>
