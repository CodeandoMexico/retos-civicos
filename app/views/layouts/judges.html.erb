<!DOCTYPE html>
<html>
<head>
  <title>Retos públicos</title>
  <%= stylesheet_link_tag 'dashboard', media: 'all' %>
  <%= javascript_include_tag 'application' %>
  <link href="//netdna.bootstrapcdn.com/font-awesome/4.0.3/css/font-awesome.css" rel="stylesheet">
  <%= csrf_meta_tags %>
</head>
<body>
  <div class="container-fluid l-dashboard">
    <div class="col-lg-3 col-md-3 l-sidebar sidebar">
      <h1 class="l-space-bottom"><%= link_to image_tag('logos-horizontal/retos_logo_horizontal-04.png', class: 'brand', alt: 'Retos públicos'), root_path %></h1>
      <h3 class="text-muted l-space-bottom"><%= current_user.name %></h3>
      <ul class="sidebar-nav">
        <li><%= link_to 'Evaluaciones', evaluations_path, class: tab_class('evaluations') %></li>
      </ul>
      <hr/>
      <ul class="sidebar-subnav">
        <li><%= link_to 'Cerrar sesión', destroy_user_session_path, method: :delete %></li>
      </ul>
    </div>
    <div class="col-lg-9 col-md-9 l-main">
      <% if alert %>
        <div class="alert alert-danger">
          <%= alert %>
        </div>
      <% end %>

      <% if notice %>
        <div class="alert alert-success">
          <%= notice %>
        </div>
      <% end %>

      <%= yield %>
    </div>
  </div>
</body>
</html>
