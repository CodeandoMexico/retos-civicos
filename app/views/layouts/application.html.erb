<!DOCTYPE html>
<html>
<head>
  <title>Aquila</title>
  <%= stylesheet_link_tag    "application", :media => "all" %>
  <%= javascript_include_tag "application" %>
  <%= csrf_meta_tags %>
</head>
<body>

<div class="container">
  <div class="row">
  <% if current_user %>
    Welcome <%= current_user.to_s %>!
    <%= link_to "Sign Out", signout_path %>
  <% else %>
    <p><%= link_to "Sign in with Github", "/auth/github" %></p>
    <p><%= link_to "Sign in with LinkedIn", "/auth/linkedin" %></p>
    <p><%= link_to "Sign in with Twitter", "/auth/twitter" %></p>
  <% end %>

  <% flash.each do |type, message| %>
    <div class="<%= type %>">
      <%= message %>
    </div>
  <% end %>
  <%= yield %>
  </div>
</div>
</body>
</html>
