<header id="main-header">
  <div class="header-pre-wrap">
    <div class="row">
      <div class="what-badge"></div>
      <p> <strong>¿Que es Codeando México?</strong> Un espacio donde la transparencia y colaboración ocurren todos los días. <strong><%= link_to "¡Ver más!"%></strong> </p>
      <%= form_tag set_language_path do %>
        <%= select_tag 'i18n[locale]', options_from_collection_for_select(LANGUAGES, :first, :last, I18n.locale.to_s) %>
      <% end %>
      <br />
    </div>
  </div>
  <div class="header-wrap">
    <div class="row">
      <div class="logo"><%= link_to "Codeando México", root_path %></div>
      <nav>
        <ul class="main-menu">
          <li><%= link_to 'Proyectos', projects_path %></li>
          <li><%= link_to "Proyecto Nuevo", new_project_path %></li>
        </ul>
        <% if current_user %>
        <div class="current-user"><span>Welcome <%= current_user.to_s %>!</span> <%= link_to "Sign Out", signout_path %></div>
        <% else %>
        <ul class="login-menu">
          <li><%= link_to sign_up_path do %>
            Sign up / Log in <i class="icon-github"></i> <i class="icon-twitter"></i> <i class="icon-linkedin"></i>
          <% end %>  
          </li>
        </ul>
        <% end %>
      </nav>
    </div>
  </div>
  <% if signed_in? && !current_page?('/') %>
  <div class="header-green-margin"></div>
  <% end %>
</header>
