<section class="unit slogan-landing">
  <div class="container wrapper">

    <h1><%= t("landing.slogan") %></h1>

    <%= link_to projects_path, :class => "get-involved" do %>
      <%= t('.get_involved') %>
    <% end %>

    <%= image_tag "circles_4.png", class: "circles" %>
  </div>
</section>

<section id="index_projects" class="unit index_projects home">
  <div class="container holder">

    <div class="unit home_pitch">
      <%= t("landing.goal") %>
    </div>

    <header class="">
      <h1><%= t('.recent') %></h1>
    </header>

    <section id="projects_list" class="columns on-3 projects_list">

      <%= render @projects %>

    </section>
    
  </div>
</section>

<div class="unit landing_collage">
  <div class="container wrapper">
    <%= image_tag "collage.png" %>
  </div>
</div>
