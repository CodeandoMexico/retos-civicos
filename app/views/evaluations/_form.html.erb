<%= form_for @evaluation, html: { class: 'form-horizontal' } do |f| %>
  <%= f.error_messages %>
  <div class="form-group">
    <div class="col-sm-3">
      <%= f.label :evaluation_file, t('.evaluation_file'), class: 'control-label' %>
    </div>
    <div class="col-sm-9">
      <% if @evaluation.evaluation_file? %>
        <%= link_to @evaluation.read_attribute(:evaluation_file), @evaluation.evaluation_file.url, class: 'l-space-bottom' %>
      <% end %>
      <%= f.file_field :evaluation_file, required: true, class: 'form-control' %>
    </div>
  </div>

  <div class="form-group">
    <div class="col-sm-offset-3 col-sm-9">
      <%= f.submit t('.submit'), class: 'btn btn-primary btn-lg' %>
    </div>
  </div>
<% end %>
