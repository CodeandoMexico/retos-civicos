<%= content_tag :h3, t('.summary'), style: 'margin-left:7px;' %>
<table class="table">
  <tbody>
    <tr>
      <th><%= t('.entry_name') %></th>
      <td><%= entry.name %></td>
    </tr>
    <tr>
      <th><%= t('.entry_description') %></th>
      <td><%= simple_format entry.description %>
    </tr>
    <tr>
      <th><%= t('.company_name') %></th>
      <td><%= entry.member.company_name %></td>
    </tr>
    <tr>
      <th><%= t('.entry_email') %></th>
      <td><%= entry.member.email %></td>
    </tr>
    <tr>
      <th><%= t('.company_rfc') %></th>
      <td><%= entry.member.company_rfc %></td>
    </tr>
    <tr>
      <th><%= t('.link_to_project') %></th>
      <td><%= link_to truncate(entry.idea_url), entry.idea_url, target: '_blank' %></td>
    </tr>
    <tr>
      <th><%= t('.technologies') %></th>
      <td><%= entry.technologies_separated_by_commas %></td>
    </tr>
    <tr>
      <th><%= t('.received_on') %></th>
      <td><%= l(entry.created_at, format: :long).capitalize %></td>
    </tr>
  </tbody>
</table>
<div class="embed-responsive embed-responsive-4by3">
  <%= preview_url entry.idea_url %>
</div>
