<p>
  <%= link_to 'Aviso de privacidad', privacy_path, target: '_blank' %>
</p>


<%- if controller_name != 'sessions' %>
  <%= link_to "Ya tengo cuenta con email! Iniciar sesión", new_session_path(resource_name) %><br />
<% end -%>

<%- if controller_name == 'sessions' %>
  <%= link_to "Olvide mi contraseña", new_password_path(resource_name) %><br />
<% end %>

<%- if devise_mapping.registerable? && controller_name != 'registrations' %>
  <%= link_to "¿Aún no tienes cuenta? Regístrate aquí", new_registration_path(resource_name) %><br />
<% end -%>

<%- if devise_mapping.omniauthable? %>
  <p>Inicia sesión con:</p>
  <%- resource_class.omniauth_providers.each do |provider| %>
    <%= link_to "<i class='fa fa-#{provider.to_s} fa-2x' style='margin-right: 10px;'></i>".html_safe, "/users/auth/#{provider}" %>
  <% end -%>
<% end -%>
