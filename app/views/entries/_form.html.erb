<div class="form_container">
  <%= form_for [@challenge, @entry] do |f| %>
    <section id="form_main" class="form_main">
      <%= f.error_messages %>

      <section>
        <div class="unit row">
          <div class="column left">
            <h2><%= t(".challenge") %></h2>
          </div>
          <div class="column right">
            <h3><%= @challenge.title %></h3>
          </div>
        </div>

        <div class="unit row">
          <div class="column left">
            <%= f.label :name, t(".name")  %>
            <p><%= t(".name-description") %></p>
          </div>
          <div class="column right">
            <%= f.text_field :name, required: true %>
          </div>
        </div>

        <div class="unit row">
          <div class="column left">
            <%= f.label :company_name, t(".company-name")  %>
            <p><%= t(".company-name-description") %></p>
          </div>
          <div class="column right">
            <%= f.text_field :company_name, required: true %>
          </div>
        </div>

        <div class="unit row">
          <div class="column left">
            <%= f.label :description, t(".description")  %>
            <p><%= t(".description-description") %></p>
          </div>
          <div class="column right">
            <%= f.text_area :description, required: true %>
          </div>
        </div>

        <div class="unit row">
          <div class="column left">
            <%= f.label :technologies, t(".technologies")  %>
            <p><%= t(".technologies-description") %></p>
          </div>
          <div class="column right">
            <%= f.text_area :technologies, required: true %>
          </div>
        </div>

        <div class="unit row">
          <div class="column left">
            <%= f.label :live_demo_url, t(".live-demo-url")  %>
            <p><%= t(".demo-url-description") %></p>
          </div>
          <div class="column right">
            <%= f.text_field :live_demo_url, required: true %>
          </div>
        </div>

        <div class="unit row">
          <div class="column left">
            <%= f.label :image, t(".image") %>
            <p><%= t(".image-description") %></p>
          </div>
          <div class="column right">
            <%= image_tag @entry.image_url, width: 300 %>
            <%= f.file_field :image %>
          </div>
        </div>

        <%= f.hidden_field :member_id, value: current_member.id %>
      </section>
    </section>

    <section id="form_save" class="form_save">
      <%= f.submit t('.submit') %>
    </section>

  <% end %>
</div>
