<% if datasets.empty? && challenge.additional_links.blank? %>
  <%= t(".non-datasets") %>
<% else %>
    <% datasets.each_slice(2) do |dataset_pair| %>
      <div class="dataset-pair">
        <div class="row">
          <% dataset_pair.each do |dataset| %>
            <% dataset_info = challenge.dataset_info(dataset) %>
            <% dataset_format = dataset_info['resources'][0]['format'].downcase %>
            <% dataset_url = "http://datamx.io/dataset/#{dataset_info['name']}" %>

            <div class="col-md-6">
              <div class="media" data-dataset-teaser>
                <%= link_to dataset_url, class: 'pull-left' do %>
                  <div class="format-label media-object" property="dc:format" data-format="<%= dataset_format %>">
                    <%= dataset_format %>
                  </div>
                <% end %>
                <div class="media-body">
                  <h4 class="media-heading">
                    <%= link_to dataset_info['title'], dataset_url, class: 'dataset-title', target:"_blank" %>
                  </h4>
                  <%= dataset_info['notes'].truncate(100) %>
                </div>
              </div>
            </div>
          <% end %>
        </div>
      </div>
    <% end %>

    <% if @challenge.additional_links.present? %>
      <div class="additional-links">
        <%= markdown_for_additional_links @challenge.additional_links %>
      </div>
    <% end %>
<% end %>
