<div class="content-box">
  <div class="box-title"><%= I18n.t('brigades.show.member').pluralize(2) %></div>
  <div class="box-content members">
    <div class="members-panel-content">
      <%= render partial: 'member',
              locals: { profile_img: @brigade.organizer.avatar, from_modal: false, member_name: @brigade.organizer.name,
                        subtext: "(#{I18n.t('brigades.show.members.organizer')})" } %>
      <% @brigade.followers.each do |follower| %>
      <%= render partial: 'member',
             locals: { profile_img: follower.avatar,
                       from_modal: false, member_name: follower.name,
                       subtext: "4 #{I18n.t('brigades.show.project').pluralize(4).downcase} #{I18n.t('brigades.show.members.in_common')}" } %>
    <% end %>
    </div>
    <span class="all-members-link modal-link" data-toggle="modal" data-target="#members-modal">
      <%= I18n.t('brigades.show.members.see_all_members') %>
    </span>
  </div>
</div>