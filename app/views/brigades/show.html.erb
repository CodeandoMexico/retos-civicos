<div id="brigades">
  <div class="hero-container" id="hero-container">
    <div class="hero-image-container" style="background-image: url(<%= @brigade.header_image_url %>)">
      <div class="translucent-overlay">
        <div class="hero-text-container">
          <div class="hero-text">Monterrey</div>
        </div>
      </div>
    </div>
  </div>
  <p id="notice"><%= notice %></p>

  <p>
    <b>Location:</b>
    <%= @brigade.location %>
  </p>

  <p>
    <b>Description:</b>
    <%= @brigade.description %>
  </p>

  <p>
    <b>Calendar url:</b>
    <%= @brigade.calendar_url %>
  </p>

  <p>
    <b>Slack url:</b>
    <%= @brigade.slack_url %>
  </p>

  <p>
    <b>Github url:</b>
    <%= @brigade.github_url %>
  </p>

  <p>
    <b>Facebook url:</b>
    <%= @brigade.facebook_url %>
  </p>

  <p>
    <b>Twitter url:</b>
    <%= @brigade.twitter_url %>
  </p>

  <p>
    <b>Header image url:</b>
    <%= @brigade.header_image_url %>
  </p>

  <%= link_to 'Edit', edit_brigade_path(@brigade) %> |
  <%= link_to 'Back', brigades_path %>
</div>