  <div class="<%= from_modal ? 'modal-member' : 'member' %>">
    <div style="background-image:url(<%= profile_img %>)" class="member-image"></div>
    <div>
      <div class="member-name"><%= member_name %></div>
      <div class="sub-text">
        <%= subtext %>
      </div>
    </div>
  </div>
</a>