<div class="deck">
  <div class="actions--card">
    <div class="action--title">
      <%= render 'challenges_filter',
      challenges: @challenges,
      current_challenge: @current_challenge,
      filter_path: ->(challenge) { dashboard_judges_path(challenge_id: challenge.id) } %>
    </div>
    <!-- <div class="action--list">
      <%= link_to t('.new_judge'), new_dashboard_challenge_evaluation_path(@current_challenge),
      class: 'btn btn-default action-element' %>
    </div> -->

    <div class="action--list">
      <div class="btn-group action-element">
        <button type="button" class="btn btn-default dropdown-toggle" data-toggle="dropdown" aria-expanded="false">
          Acciones <span class="caret"></span>
        </button>
        <ul class="dropdown-menu" role="menu">
          <li><%= link_to t('.new_judge'), new_dashboard_challenge_evaluation_path(@current_challenge) %></li>
          <li><%= link_to t('.define_criteria'),
          dashboard_challenge_new_criteria_path(@current_challenge) %></li>
        </ul>
      </div>
    </div>
  </div>

  <% if @judges.any? %>
  <div class="table--card">
    <ul>
      <% @judges.each do |judge| %>
        <%= link_to dashboard_judge_path(judge, challenge_id: @current_challenge.id), id: "judge_#{judge.id}" do %>
          <li class="table--row">
            <div class="row--title"><%= judge.email %></div>
            <div class="row--subtitle"><%= judge.name %></div>
            <div class="row--footer"><%= judge.company_name %></div>
          </li>
        <% end %>
      <% end %>
    </ul>
  </div>
  <% else %>
  <div class="alert alert-info">
    <%= t('.no-proposals') %>
  </div>
  <% end %>
</div>
