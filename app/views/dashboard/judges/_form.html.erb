<%= form_for @user, url: { path: dashboard_judges_path(challenge_id: @current_challenge), action: :create }, html: { class: 'form-horizontal' } do |f| %>
  <div class="sheet-section sheet-section-with-pad">
    <%= f.error_messages %>

    <%= hidden_field_tag "challenge_id", @current_challenge.id %>
    <div class="form-group">
      <div class="col-sm-3">
        <%= f.label :name, t(".name"), class: 'control-label' %>
      </div>
      <div class="col-sm-9">
        <%= f.text_field :name, class: 'form-control' %>
      </div>
    </div>

    <div class="form-group">
      <div class="col-sm-3">
        <%= f.label :email, t(".email"), class: 'control-label' %>
      </div>
      <div class="col-sm-9">
        <%= f.text_field :email, class: 'form-control' %>
      </div>
    </div>
    <div class="form-group">
      <div class="col-sm-offset-3 col-sm-9">
        <%= f.submit t('.submit'), class: 'btn btn-default pull-right' %>
      </div>
    </div>
  </div>
<% end %>
