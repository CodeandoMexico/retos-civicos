<% if entry.is_invalid? %>
  <%= button_to t('.mark_as_valid'), mark_valid_dashboard_entry_path(entry),
    confirm: t('.confirm_mark_valid'),
    class: 'btn btn-default' %>
<% else %>
  <%= button_to t('.mark_as_invalid'), mark_invalid_dashboard_entry_path(entry),
    confirm: t('.confirm_mark_invalid'),
    class: 'btn btn-default' %>
<% end %>
