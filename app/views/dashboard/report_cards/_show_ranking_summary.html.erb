<!-- Panel sections for kpis -->
<div class="kpi-container row">
   <div class="col-md-4 col-lg-4">
     <div class="panel panel-default">
       <div class="kpi-content panel-body">
         <strong>Estatus de evaluación: </strong><span>Evaluando</span>
       </div>
     </div>
   </div>
   <div class="col-md-4 col-lg-4">
     <div class="panel panel-default">
       <div class="kpi-content panel-body">
         <strong>Jueces en evaluación: </strong><span>0 de 2</span>
       </div>
     </div>
   </div>
   <div class="col-md-4 col-lg-4">
     <div class="panel panel-default">
       <div class="kpi-content panel-body">
         <strong>Propuestas evaluadas: </strong><span>2 de 6</span>
       </div>
     </div>
   </div>
 </div>

<!-- Ranking section -->
<%# if challenge.rank_entries? %>
<%# else %>
   <!-- <p><%= t('.not_possible_to_rank_entries') %></p> -->
   <%#= render 'shared/progress_bar', current_progress: 10, total: 100 %>
<%# end %>

<!-- Evaluation sections -->
<% if challenge.evaluations.any? %>
  <h3><%= t('.evaluations') %></h3>
  <div class="table--card">
    <ul>
      <% challenge.evaluations.each do |evaluation| %>
        <li class="table--row">
          <div class="row--title"><%= evaluation.judge.name %></div>
          <div class="row--subtitle"><%= evaluation.judge.name %></div>
          <div class="row--footer"><%= evaluation_status(evaluation.status, evaluation.number_of_entries_graded, challenge.entries.count) %></div>
        </li>
      <% end %>
    </ul>
  </div>
<% end %>
