<!-- Evaluation sections -->
<% if challenge.evaluations.any? %>
  <h3><%= t('.scores') %></h3>
  <div class="table--card">
    <ul>
      <% challenge.sort_entries_by_scores.each_with_index do |entry, idx| %>
        <%#= link_to dashboard_judge_path(evaluation.judge, challenge_id: @current_challenge.id), id: "judge_#{evaluation.judge.id}" do %>
          <li class="table--row">
            <div class="row--title"><%= "\##{idx + 1} #{entry.name}" %></div>
            <div class="row--subtitle"><%= entry.description %></div>
            <div class="row--footer"><%= t('.final_score', final_score: entry.final_score ) %></div>
          </li>
        <%# end %>
      <% end %>
    </ul>
  </div>
<% end %>
