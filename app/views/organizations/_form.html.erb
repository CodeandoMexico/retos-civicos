<%= form_for @organization, html: { class: 'form-horizontal' } do |f| %>
  <div class="sheet-section sheet-section-with-pad">
    <%= f.error_messages %>

    <div class="form-group">
      <div class="col-sm-3">
        <%= f.label :name, t(".name"), class: 'control-label' %>
      </div>
      <div class="col-sm-9">
        <%= f.text_field :name, class: 'form-control' %>
      </div>
    </div>

    <div class="form-group">
      <div class="col-sm-3">
        <%= f.label :email, t(".email"), class: 'control-label' %>
        <span class="help-block"><%= t(".email-description") %></span>
      </div>
      <div class="col-sm-9">
        <%= f.text_field :email, class: 'form-control' %>
      </div>
    </div>

    <div class="form-group">
      <div class="col-sm-3">
        <%= f.label :bio, t(".bio"), class: 'control-label' %>
        <span class="help-block"><%= t(".bio-description") %></span>
      </div>
      <div class="col-sm-9">
        <%= f.text_area :bio, class: 'form-control', rows: 4 %>
      </div>
    </div>

    <div class="form-group">
      <div class="col-sm-3">
        <%= f.label :avatar, t(".avatar"), class: 'control-label' %>
      </div>
      <div class="col-sm-9">
        <%= image_tag @organization.image_url(:profile) %>
        <%= f.file_field :avatar %>
      </div>
    </div>

    <div class="form-group">
      <div class="col-sm-offset-3 col-sm-9">
        <% if params[:new_user] %>
          <%= f.submit t('.to_challenge_creation'), class: 'btn btn-primary btn-lg' %>
        <% else %>
          <%= f.submit t('.submit'), class: 'btn btn-primary btn-lg' %>
        <% end %>
      </div>
    </div>
  </div>
<% end %>
