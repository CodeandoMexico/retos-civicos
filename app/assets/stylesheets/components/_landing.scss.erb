/* Landing component */

// Background
$landing_image_background: url(<%= asset_path 'landing_placeholder.jpg' %>);

// Container
$landing_container_width: 100%;
$landing_container_height: 400px;

// Colors
$landing_default_color: #FFFFFF;

#intro {
  width: $landing_container_width;
  height: $landing_container_height;
  background-image: $landing_image_background;
  background-size: cover;
  color: $landing_default_color;
  margin-bottom: 70px;
  margin-top: -$main_top_and_bottom_margin;

  .content {
    margin-left: auto;
    margin-right: auto;
    text-align: center;
    width: 100%;
    padding-top: 100px;

    .title {
      img { max-width: 360px; }
    }

    .actions {
      margin-top: 30px;
      a {
        margin-left: 30px;
        margin-right: 30px;
      }
    }
  }
}
